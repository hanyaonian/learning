{
  "compilerOptions": {
    "target": "es6",
    "module": "umd",
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "suppressImplicitAnyIndexErrors": true // 隐藏一些报错
  },
  "include": ["./**/*"],
  "exclude": ["./dist/**/*"]
}
