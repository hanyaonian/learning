{
  "compilerOptions": {
    "target": "esnext",
    "declaration": true,
    "declarationDir": "./dist",
    "module": "ES6",
    "allowJs": true,
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "noImplicitAny": true,
    "noImplicitReturns": true,
    "skipLibCheck": true,
    "moduleResolution": "NodeNext",
    "allowSyntheticDefaultImports": true
  },
  "include": ["./*"],
  "exclude": ["**/node_modules", "./dist/**/*"]
}
